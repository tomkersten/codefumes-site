%ul.session_info
  - if logged_in?
    %li= link_to current_user.handle, my_account_path, :class => "edit_account"
    %li= link_to "My Projects", my_projects_path, :class => "project_list"
    %li= link_to "Log out", logout_path, :class => "logout"
  - else
    - unless RAILS_ENV == "production"
      %li= link_to 'Login', login_path, :class => 'login'
      %li= link_to 'Sign Up', signup_path, :class => 'sign_up'
